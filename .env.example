# =============================================================================
# SALES PORTAL ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update values for your environment.
# Do NOT commit .env files to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# NODE ENVIRONMENT
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# GEINS SDK CONFIGURATION
# -----------------------------------------------------------------------------
# API key for Geins platform authentication
GEINS_API_KEY=

# Geins GraphQL API endpoint
GEINS_API_ENDPOINT=https://api.geins.io/graphql

# -----------------------------------------------------------------------------
# STORAGE CONFIGURATION
# -----------------------------------------------------------------------------
# Storage driver: 'fs' (filesystem) for development, 'redis' for production
STORAGE_DRIVER=fs

# Redis URL for production KV storage (only needed when STORAGE_DRIVER=redis)
REDIS_URL=

# -----------------------------------------------------------------------------
# PUBLIC CONFIGURATION (Exposed to client)
# -----------------------------------------------------------------------------
# Enable analytics (Google Analytics, etc.)
NUXT_PUBLIC_ENABLE_ANALYTICS=false

# API base URL (defaults to /api)
NUXT_PUBLIC_API_BASE_URL=/api

# API request timeout in milliseconds
NUXT_PUBLIC_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# HOSTING & DEPLOYMENT (Used by CI/CD)
# -----------------------------------------------------------------------------
# Deployment target URL
DEPLOY_URL=

# Preview deployment URL (for PR previews)
PREVIEW_URL=

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
SENTRY_DSN=
