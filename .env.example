# =============================================================================
# SALES PORTAL ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update values for your environment.
# Do NOT commit .env files to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# NODE ENVIRONMENT
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# GEINS SDK CONFIGURATION
# -----------------------------------------------------------------------------

# Geins GraphQL API endpoint
GEINS_API_ENDPOINT=https://api.geins.io/graphql

# -----------------------------------------------------------------------------
# STORAGE CONFIGURATION
# -----------------------------------------------------------------------------
# Storage driver: 'fs' (filesystem) for development, 'redis' for production
STORAGE_DRIVER=fs

# Redis URL for production KV storage (only needed when STORAGE_DRIVER=redis)
REDIS_URL=

# -----------------------------------------------------------------------------
# PUBLIC CONFIGURATION (Exposed to client)
# -----------------------------------------------------------------------------
# Enable analytics (Google Analytics, etc.)
NUXT_PUBLIC_ENABLE_ANALYTICS=false

# API base URL (defaults to /api)
NUXT_PUBLIC_API_BASE_URL=/api

# API request timeout in milliseconds
NUXT_PUBLIC_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# HOSTING & DEPLOYMENT (Used by CI/CD)
# -----------------------------------------------------------------------------
# Deployment target URL
DEPLOY_URL=

# Preview deployment URL (for PR previews)
PREVIEW_URL=

# -----------------------------------------------------------------------------
# HEALTH CHECK CONFIGURATION
# -----------------------------------------------------------------------------
# Secret key required to access detailed health metrics (/api/health?key=YOUR_SECRET)
# IMPORTANT: Must be explicitly configured to enable detailed health metrics.
# Without this, only basic status/timestamp will be returned.
# Generate a secure random string for production use.
HEALTH_CHECK_SECRET=

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Azure Application Insights connection string (auto-configured in Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Application Insights instrumentation key (auto-configured in Azure)
APPINSIGHTS_INSTRUMENTATIONKEY=

# -----------------------------------------------------------------------------
# SENTRY CONFIGURATION
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking (public, exposed to client)
# Get this from your Sentry project settings
NUXT_PUBLIC_SENTRY_DSN=

# Sentry organization slug (for source map uploads)
SENTRY_ORG=litium

# Sentry project slug (for source map uploads)
SENTRY_PROJECT=sales-portal

# Sentry auth token (for source map uploads during build)
# Generate at: https://sentry.io/settings/auth-tokens/
SENTRY_AUTH_TOKEN=
# Disable Sentry console logging (set to "true" to silence Sentry debug output)
SENTRY_SILENT=false
